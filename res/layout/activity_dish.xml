<!-- RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2ffff"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context="${relativePackage}.${activityClass}" -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dish"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#d2ffff"
        android:orientation="vertical" >

        <!-- android:layout_width="fill_parent"
            android:layout_height="300dp" -->
        <ImageView
            android:id="@+id/dish_img"
            android:layout_width="368dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/tudousi" />

        <TextView
            android:id="@+id/dish_title"
            android:layout_width="148dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="炒土豆丝"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dish_detail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:maxLines="8"
            android:text="1、底油：20克\n2、炝锅料：姜丝5克、蒜片5克\n3、主料：土豆丝230克,青椒丝20克，红椒丝20克"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/material_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/tudousi_peiliao" />
        
        <ImageView
            android:id="@+id/material_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
             />
        
        <ImageView
            android:id="@+id/material_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/startcook"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="开始" />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
            	android:src="@drawable/unfavorite_dish_72"
                 />

            <Button
                android:id="@+id/dish_replace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="14dp"
                android:text="替换" />

        </RelativeLayout>

        <Button
            android:id="@+id/share_to_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到朋友圈" />
        
        <ImageView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/shareto" />
    </LinearLayout>
            
</ScrollView>
