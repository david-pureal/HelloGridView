<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_makedish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#d2ffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/makedish_img"
            android:layout_width="368dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
             />
        <!-- android:src="@drawable/camera" -->

        <TextView
            android:id="@+id/makedish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/editable_20"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="炒土豆丝"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/makedish_brief"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:maxLines="8"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp" />
        <!-- EditText
	        android:layout_width="275dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="30dp"
	        android:hint="添加简介"
	        android:imeOptions="actionDone"
	        android:inputType="text"
	        android:maxLength="5"
	        android:textColorHint="#b0b0b0" / -->

		<TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:maxLines="8"
            android:text="油和炝锅料"
            android:textColor="#000000"
            android:textSize="30sp" />
		<ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="5dp"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.14"
	        android:scaleType="fitCenter"
	        android:src="@drawable/line" />
		
			<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginLeft="15dp"
		        android:background="#d2ffff"
		        android:orientation="horizontal" >"
		        <TextView
		            android:layout_width="120dp"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_marginTop="10dp"
		            android:maxLines="1"
		            android:text="油(克)"
		            android:textColor="#555555"
		            android:textSize="20sp" />

		        <TextView
		            android:id="@+id/makedish_oil"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_marginRight="20dp"
		            android:layout_marginTop="10dp"
		            android:text="10"
		            android:textColor="#000000"
		            android:textSize="20sp" />

		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginLeft="15dp"
		        android:background="#d2ffff"
		        android:orientation="horizontal" >

		        <TextView
		            android:layout_width="120dp"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:layout_marginTop="10dp"
		            android:maxLines="1"
		            android:text="炝锅料"
		            android:textColor="#555555"
		            android:textSize="20sp" />

		        <TextView
		            android:id="@+id/makedish_qiangguoliao"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_marginRight="20dp"
		            android:layout_marginTop="10dp"
		            android:text="蒜片 5 个"
		            android:textColor="#000000"
		            android:textSize="20sp" />

		    </LinearLayout>
		    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:maxLines="8"
            android:text="主料"
            android:textColor="#000000"
            android:textSize="30sp" />
        
        <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="5dp"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.14"
	        android:scaleType="fitCenter"
	        android:src="@drawable/line" />
		
	    <!-- 主料表格 -->
		<TableLayout
		    android:id="@+id/table_zhuliao"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_marginTop="5dp"
		    android:background="#999999"
		    android:stretchColumns="*" >

		    <!-- android:shrinkColumns="0,1" -->
		    <TextView
		        android:id="@+id/makedish_add_zhuliao"
		        android:layout_width="wrap_content"
		        android:layout_height="43dp"
		        android:layout_gravity="center_vertical"
		        android:layout_marginTop="-5dp"
		        android:drawableLeft="@drawable/add_stuff_tiny"
		        android:drawablePadding="10dp"
		        android:gravity="center_vertical"
		        android:paddingLeft="20dp"
		        android:text="添加主料"
		        android:textColor="#E34F1B"
		        android:textSize="17sp" 
		        android:background="#d2ffff"/>
		</TableLayout>  <!-- 主料表格 -->
        
        <CheckBox
            android:id="@+id/makedish_zhuliao_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@drawable/cb_drw"
            android:text="  加水"
            android:textColor="#555555"
            android:textSize="20sp" />
        
        <!-- 主料 温度时间搅拌参数表格  -->

		<TableLayout
		    android:id="@+id/table_zhuliao_param"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"
		    android:background="#dddddd"
		    android:stretchColumns="*" >

		    <!-- android:shrinkColumns="0,1" -->
		    
			<TableRow android:layout_width="fill_parent" >
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="#d2ffff"
			        android:text="温度"
			        android:textColor="#555555"
			        android:textSize="20sp" />
			    <TextView
			        android:id="@+id/makedish_zhuliao_temp"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_gravity="top"
			        android:layout_marginLeft="-5dp"
			        android:layout_marginRight="2dp"
			        android:background="#d2ffff"
			        android:text="180°C"
			        android:textColor="#000000"
			        android:textSize="20sp" />
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="#d2ffff"
			        android:text="  时间"
			        android:textColor="#555555"
			        android:textSize="20sp" />
			    <TextView
			        android:id="@+id/makedish_zhuliao_time"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:layout_marginRight="2dp"
			        android:background="#d2ffff"
			        android:text="4:30"
			        android:textColor="#000000"
			        android:textSize="20sp" />
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="#d2ffff"
			        android:text="  搅拌"
			        android:textColor="#555555"
			        android:textSize="20sp" />
			    
			    <TextView
			        android:id="@+id/makedish_zhuliao_jiaoban"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="#d2ffff"
			        android:text="4"
			        android:textColor="#000000"
			        android:textSize="20sp" />
			</TableRow>
		</TableLayout>  <!-- 主料  温度时间搅拌参数表格 -->
	    
	   <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:maxLines="8"
            android:text="辅料"
            android:textColor="#000000"
            android:textSize="30sp" />
        
        <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="5dp"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.14"
	        android:scaleType="fitCenter"
	        android:src="@drawable/line" />

        <!-- 辅料表格 -->
		<TableLayout
		    android:id="@+id/table_fuliao"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_marginTop="5dp"
		    android:background="#999999"
		    android:stretchColumns="*" >

		    <!-- android:shrinkColumns="0,1" -->
		    <TextView
		        android:id="@+id/makedish_add_fuliao"
		        android:layout_width="wrap_content"
		        android:layout_height="43dp"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="0dp"
		        android:layout_marginTop="-5dp"
		        android:drawableLeft="@drawable/add_stuff_tiny"
		        android:drawablePadding="10dp"
		        android:gravity="center_vertical"
		        android:paddingLeft="20dp"
		        android:text="添加辅料"
		        android:textColor="#E34F1B"
		        android:textSize="17sp" 
		        android:background="#d2ffff"/>
		</TableLayout>  <!-- 辅料表格 -->
		
		<CheckBox
            android:id="@+id/makedish_fuliao_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@drawable/cb_drw"
            android:textColor="#555555" 
            android:text="  加水"
            android:textSize="20sp"/>

         <!-- 辅料 温度时间搅拌参数表格  -->

		<TableLayout
		    android:id="@+id/table_fuliao_param"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"
		    android:background="#dddddd"
		    android:stretchColumns="*" >

		    <!-- android:shrinkColumns="0,1" -->
			<TableRow android:layout_width="fill_parent" >
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="#d2ffff"
			        android:text="温度"
			        android:textColor="#555555"
			        android:textSize="20sp" />
			    <TextView
			        android:id="@+id/makedish_fuliao_temp"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_gravity="top"
			        android:layout_marginLeft="-5dp"
			        android:layout_marginRight="2dp"
			        android:background="#d2ffff"
			        android:text="180°C"
			        android:textColor="#000000"
			        android:textSize="20sp" />
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="#d2ffff"
			        android:text="  时间"
			        android:textColor="#555555"
			        android:textSize="20sp" />
			    <TextView
			        android:id="@+id/makedish_fuliao_time"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:layout_marginRight="2dp"
			        android:background="#d2ffff"
			        android:text="4:30"
			        android:textColor="#000000"
			        android:textSize="20sp" />
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="#d2ffff"
			        android:text="  搅拌"
			        android:textColor="#555555"
			        android:textSize="20sp" />
			    
			    <TextView
			        android:id="@+id/makedish_fuliao_jiaoban"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="#d2ffff"
			        android:text="4"
			        android:textColor="#000000"
			        android:textSize="20sp" />
			</TableRow>
		</TableLayout>  <!-- 辅料  温度时间搅拌参数表格 -->
        
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:maxLines="8"
            android:text="备料图文"
            android:textColor="#000000"
            android:textSize="30sp" />
        <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="5dp"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.14"
	        android:scaleType="fitCenter"
	        android:src="@drawable/line" />
        
        <!-- 备料图文表格 -->
		<TableLayout
		    android:id="@+id/table_material"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:layout_marginTop="5dp"
		    android:stretchColumns="*" >
		    <!-- android:shrinkColumns="0,1" -->
		    <TextView
		        android:id="@+id/table_material_image_addrow"
		        android:layout_width="wrap_content"
		        android:layout_height="43dp"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="7dp"
		        android:drawableLeft="@drawable/add_stuff_tiny"
		        android:drawablePadding="10dp"
		        android:gravity="center_vertical"
		        android:paddingLeft="20dp"
		        android:text="添加图文"
		        android:textColor="#E34F1B"
		        android:textSize="17sp" />

		</TableLayout>  <!-- 备料图文表格 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/makedish_startcook"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="开始" />

            <Button
                android:id="@+id/xxxxx"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=" 收藏  " />



        </RelativeLayout>
        
        <ImageView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/shareto" />
    </LinearLayout>
            
</ScrollView>
