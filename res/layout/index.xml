<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    	xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#d2ffff"
	    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/builtin_dishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:src="@drawable/bluebutton_builtin" />

    <ImageView
        android:id="@+id/favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:src="@drawable/bluebutton_favorites" />

    <ImageView
        android:id="@+id/alldishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:src="@drawable/bluebutton_alldishes" />
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="炫耀"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/share"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="评论分享"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/account"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="我的积分"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/makedish"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.01"
        android:gravity="right"
        android:text="自编菜谱"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帮助"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="用户登录/注册"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="系统设置"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.04"
        android:gravity="right"
        android:text="使用说明"
        android:textColor="#000000" />

	</LinearLayout>
  
