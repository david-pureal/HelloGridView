<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2ffff"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d2ffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="108dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.61"
            android:text="取消"
            android:textColor="#E34F1B"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_title"
            android:layout_width="148dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.74"
            android:text="菜谱名称"
            android:textColor="#E34F1B"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/makesure"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="确定"
            android:textColor="#E34F1B"
            android:textSize="20dp" />
    </LinearLayout>
    
    <Spinner android:id="@+id/type_spinner"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
        
    </Spinner>

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_gravity="top"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:hint="请输入备料方法"
        android:imeOptions="normal"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColorHint="#b0b0b0" />
    
    <ImageView
        android:id="@+id/add_material_img"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:scaleType="fitXY" />
    
    <TextView
        android:id="@+id/material_delete"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/red_backgrd"
        android:gravity="center"
        android:text="  删  除    "
        android:textColor="#ffffff"
        android:textSize="20dp" />
    
    

</LinearLayout>