<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2ffff"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d2ffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="108dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.61"
            android:text="取消"
            android:textColor="#E34F1B"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_title"
            android:layout_width="148dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.74"
            android:text="菜谱名称"
            android:textColor="#E34F1B"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/makesure"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="确定"
            android:textColor="#E34F1B"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/line" />

    <TableLayout
        android:id="@+id/table_zhuliao_paramxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:stretchColumns="*" >

        <!-- android:shrinkColumns="0,1" -->

        <TableRow android:layout_width="fill_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#d2ffff"
                android:paddingLeft="30dp"
                android:text="温度"
                android:textColor="#555555"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/makedish_temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="2dp"
                android:background="#d2ffff"
                android:text="180°C"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#d2ffff"
                android:paddingLeft="30dp"
                android:text="时间"
                android:textColor="#555555"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/makedish_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:background="#d2ffff"
                android:text="4:30"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#d2ffff"
                android:paddingLeft="30dp"
                android:text="搅拌"
                android:textColor="#555555"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/makedish_jiaoban"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#d2ffff"
                android:text="4"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout> <!-- 主料  温度时间搅拌参数表格 -->

</LinearLayout>