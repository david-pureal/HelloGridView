<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_back"
    android:longClickable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
                
        <TextView
            android:id="@+id/login_header"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="登录后才能上传哦"
            android:textColor="#CE9D9D"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/login_usericon"
                android:layout_width="117dp"
                android:layout_height="117dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_icon" />
            
            <TextView
                android:id="@+id/login_username"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="未登录"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvWeixin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_weight="0.43"
                android:background="@drawable/wechat_login"
                android:gravity="center"
                android:singleLine="true"
                android:text="用微信登录"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tvQq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/qq_login"
                android:gravity="center"
                android:singleLine="true"
                android:text="用QQ登录"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvWeibo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/weibo_login"
                android:gravity="center"
                android:singleLine="true"
                android:text="用新浪微博登录"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvMsgRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/msg_login"
                android:gravity="center"
                android:singleLine="true"
                android:text="短信验证登录"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>